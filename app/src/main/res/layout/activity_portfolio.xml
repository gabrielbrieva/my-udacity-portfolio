<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PortfolioActivity"
    android:background="@color/main_background">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:src="@drawable/tuxan" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/my_full_name"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:gravity="center" />



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:baselineAligned="false"
                android:focusableInTouchMode="false">

                <!-- social contacts -->

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibGitHub"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_github"
                    android:padding="10dp"
                    android:background="@drawable/social_button"
                    android:onClick="onSocialButtonTap" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibLinkedIn"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_linkedin"
                    android:padding="10dp"
                    android:background="@drawable/social_button"
                    android:onClick="onSocialButtonTap" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ibGooglePlus"
                    android:src="@drawable/ic_googleplus"
                    android:adjustViewBounds="false"
                    android:padding="10dp"
                    android:background="@drawable/social_button"
                    android:onClick="onSocialButtonTap" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/spotify_streamer_app"
        android:id="@+id/bt_spotify"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_spotify"
        android:onClick="onAppPortfolioButtonTap" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/football_scores_app"
        android:id="@+id/bt_football_scores"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_soccer"
        android:onClick="onAppPortfolioButtonTap" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/library_app"
        android:id="@+id/bt_library"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/ic_library"
        android:onClick="onAppPortfolioButtonTap" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/build_it_bigger_app"
        android:id="@+id/bt_build_it_bigger"
        android:layout_gravity="center_horizontal"
        android:onClick="onAppPortfolioButtonTap" />

    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="@string/capstone_app"
        android:id="@+id/bt_capstone"
        android:layout_gravity="center_horizontal"
        android:onClick="onAppPortfolioButtonTap"
        android:backgroundTint="@color/default_tint" />

</LinearLayout>
