<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/toolbar</item>
        <item name="colorPrimaryDark">@color/toolbar</item>

        <item name="colorAccent">@color/default_tint</item>
    </style>

    <style name="AppButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">#FFFFFFFF</item>
    </style>

    <style name="SocialButtonStyle" parent="Widget.AppCompat.Button.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/social_button</item>
        <item name="android:layout_margin">6dp</item>
    </style>

</resources>
